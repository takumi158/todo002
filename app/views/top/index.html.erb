<CENTER>
  <div class="scroll-area">
    <div class="box box__bg_photo">
      <div class="row">
        <div class="col-sm-6">
          <div class="container">
            <a href="todos/new" class="cp_btn">新規予定追加</a>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="container">
            <a href="#" class="cp_btn">メンバー登録</a>
          </div>
        </div>
      </div>
    </div>
  </div>

<br><br>

<div class="top01">
  <h3>現在のToDoリスト<br><%= Todo.count %></h3>
</div>
<br>
<table>
  <thead>
    <tr>
      <th>登録日</th>
      <th>タイトル</th>
      <th>締切日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.date %></td>
        <td><%= todo.text %></td>
        <td><%= todo.deadline %></td>
        <td><%= link_to '詳細', todo %></td>
        <td><%= link_to '編集', edit_todo_path(todo) %></td>
        <td><%= link_to '削除', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


