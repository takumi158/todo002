<CENTER>
<p id="notice"><%= notice %></p>

<h1>ToDoリスト</h1>

<table>
  <thead>
    <tr>
      <th>登録日</th>
      <th>タイトル</th>
      <th>締切日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.date %></td>
        <td><%= todo.text %></td>
        <td><%= todo.deadline %></td>
        <td><%= link_to '詳細', todo %></td>
        <td><%= link_to '編集', edit_todo_path(todo) %></td>
        <td><%= link_to '削除', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規予定追加', new_todo_path %>
<br>
<%= link_to 'TOP', top_index_path %> |
<%= link_to 'ToDo一覧', todos_path %> |
<%= link_to '削除', todos_path %>
</CENTER>
